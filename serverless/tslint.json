{
  "extends": "tslint-config-airbnb",
  "rules": {
    "align": [
      false,
      "parameters",
      "statements"
    ],
    "function-name": [
      true,
      {
        "static-method-regex": "^[A-Za-z][\\w\\d]+$"
      }
    ],
    "import-name": [
      false
    ],
    "max-line-length": [
      false,
      80
    ],
    "no-unused-variable": [
      true
    ],
    "ter-indent": [
      false,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "allow-pascal-case"
    ]
  }
}
